<?xml version="1.0" encoding="utf-8"?>
<!--This is used to define the main robot manipulation page of the app.-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFFEFE"

    android:backgroundTint="#FFFFFF"
    tools:context="com.example.myapplication.MainActivity">

    <!--This is used to define the button for anticlockwise rotational movement in the direction of axis 1.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/aclk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="aclk1"
        android:foregroundTint="#000000"
        android:rotationY="180"
        android:tint="#000000"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <!--This is used to define the button for clockwise rotational movement in the direction of axis 1.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clk1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="clk1"
        android:foregroundTint="#000000"
        android:tint="#000000"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.407"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <!--This is used to define the button for anticlockwise rotational movement in the direction of axis 2.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/aclk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="aclk2"
        android:foregroundTint="#000000"
        android:rotationY="180"
        android:tint="#000000"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <!--This is used to define the button for clockwise rotational movement in the direction of axis 2.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="clk2"
        android:foregroundTint="#000000"
        android:tint="#000000"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <!--This is used to define the button for anticlockwise rotational movement in the direction of axis 3.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/aclk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="aclk3"
        android:foregroundTint="#000000"
        android:rotationY="180"
        android:tint="#000000"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.602"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <!--This is used to define the button for clockwise rotational movement in the direction of axis 3.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clk3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="clk3"
        android:foregroundTint="#000000"
        android:tint="#000000"
        app:backgroundTint="#FFEB3B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.932"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:layout_constraintVertical_bias="0.641"
        app:srcCompat="@android:drawable/ic_menu_rotate" />

    <!--This is used to define the widget at the top of the page informs the user that the app is
    connected to the robot.-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#8BC34A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.MyApplication.PopupOverlay"
        app:title="                Connected to your Robot"
        app:titleMargin="4dp"
        app:titleTextColor="#050505" />

    <!--This is used to define the button for transition to the drill mode manipulation page.-->
    <Button
        android:id="@+id/drillMode"
        android:layout_width="137dp"
        android:layout_height="91dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="266dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="1"
        android:backgroundTint="#FF9800"
        android:text="Drill mode"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for the transition to the suction cup manipulation page.-->
    <Button
        android:id="@+id/suctionCups"
        android:layout_width="137dp"
        android:layout_height="91dp"
        android:layout_marginStart="266dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:backgroundTint="#FF9800"
        android:text="Suction cups"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the forward direction
    of axis 1.-->
    <Button
        android:id="@+id/fw1"
        android:layout_width="59dp"
        android:layout_height="56dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="400dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#3F51B5"
        android:text="FW1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the forward direction
    of axis 2.-->
    <Button
        android:id="@+id/fw2"
        android:layout_width="59dp"
        android:layout_height="57dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="242dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#3F51B5"
        android:text="FW2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.64" />

    <!--This is used to define the button for translational movement in the forward direction
    of axis 3.-->
    <Button
        android:id="@+id/fw3"
        android:layout_width="61dp"
        android:layout_height="59dp"
        android:layout_marginStart="243dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="240dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#3F51B5"
        android:text="FW3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the backward direction
    of axis 1.-->
    <Button
        android:id="@+id/bw1"
        android:layout_width="61dp"
        android:layout_height="57dp"
        android:layout_marginStart="155dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="179dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#3F51B5"
        android:text="BW1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the backward direction
    of axis 2.-->
    <Button
        android:id="@+id/bw2"
        android:layout_width="59dp"
        android:layout_height="58dp"
        android:layout_marginStart="244dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="328dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#3F51B5"
        android:text="BW2"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the backward direction
    of axis 3.-->
    <Button
        android:id="@+id/bw3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="328dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#3F51B5"
        android:text="BW3"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button to send the robot to its home orientation.-->
    <Button
        android:id="@+id/Home"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="233dp"
        android:layout_marginBottom="523dp"
        android:layout_weight="1"
        android:backgroundTint="#FFC107"
        android:text="Go to home orientation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--This is used to define the button to raise the end effector tool of the robot.-->
    <Button
        android:id="@+id/raiseEE"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="524dp"
        android:layout_weight="1"
        android:backgroundTint="#FFC107"
        android:text="Raise End Effector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--This is used to define the central icon on the page. This icon is to be replaced by
    an image or model of the robot.-->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.549"
        app:srcCompat="@drawable/circle_button" />


</androidx.constraintlayout.widget.ConstraintLayout>