<?xml version="1.0" encoding="utf-8"?>
<!--This is used to define the additional manipulation page of the app.-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relativeLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#FFFEFE"

        android:backgroundTint="#FFFDF7"
        tools:context="com.example.myapplication.MainActivity"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="158dp">

        <!--This is used to define the widget at the top of the page informs the user that the app is
        connected to the robot.-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_weight="1"
            android:background="#8BC34A"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/Theme.MyApplication.PopupOverlay"
            app:title="                Connected to your Robot"
            app:titleMargin="4dp"
            app:titleTextColor="#050505" />

        <!--This is used to define the widget toward the top of the page to inform the user that the current
        page is regarding the advanced manipulation modes. -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar3"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="-4dp"
            android:layout_marginBottom="533dp"
            android:layout_weight="1"
            android:background="#FFEB3B"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.0"
            app:popupTheme="@style/Theme.MyApplication.PopupOverlay"
            app:title="          Advanced Manipulation Modes"
            app:titleMargin="4dp"
            app:titleTextColor="#050505" />

        <!--This is used to define the list view for the different manipulation modes available.
        These need to be added manually as of now.-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/manipList"
            android:layout_width="335dp"
            android:layout_height="466dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="46dp"
            android:layout_weight="1"
            android:background="#673AB7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
