<?xml version="1.0" encoding="utf-8"?>
<!--This is used to define the drill mode manipulation page of the app.-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFFEFE"

    android:backgroundTint="#FFFDF7"
    tools:context="com.example.myapplication.MainActivity">

    <!--This is used to define the button to raise the end effector tool: extra fine.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/extraFineUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="42dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <!--This is used to define the button to raise the end effector tool: fine.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fineUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="112dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/arrow_up_float" />


    <!--This is used to define the button to raise the end effector tool: large.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/largeup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="184dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/arrow_up_float" />

    <!--This is used to define the button to lower the end effector tool: extra fine.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/extraFineDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="44dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <!--This is used to define the button to lower the end effector tool: large.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/largeDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="182dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <!--This is used to define the button to lower the end effector tool: fine.-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fineDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="295dp"
        android:layout_marginBottom="113dp"
        android:layout_weight="1"
        android:clickable="true"
        app:backgroundTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@android:drawable/arrow_down_float" />

    <!--This is used to define the widget at the top of the page informs the user that the app is
    connected to the robot.-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:background="#8BC34A"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.MyApplication.PopupOverlay"
        app:title="                Connected to your Robot"
        app:titleMargin="4dp"
        app:titleTextColor="#050505" />

    <!--This is used to define the central icon on the page. This icon is to be replaced by
    an image or model of the robot.-->
    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="72dp"
        android:layout_height="77dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="331dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#F44336"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the forward direction
    of axis 1.-->
    <Button
        android:id="@+id/fw1"
        android:layout_width="87dp"
        android:layout_height="85dp"
        android:layout_marginStart="166dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="419dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF9800"
        android:text="FW1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the forward direction
    of axis 2.-->
    <Button
        android:id="@+id/fw2"
        android:layout_width="96dp"
        android:layout_height="90dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="265dp"
        android:layout_marginBottom="269dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF9800"
        android:text="FW2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the forward direction
    of axis 3.-->
    <Button
        android:id="@+id/fw3"
        android:layout_width="88dp"
        android:layout_height="85dp"
        android:layout_marginStart="270dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="272dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF9800"
        android:text="FW3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the backward direction
    of axis 1.-->
    <Button
        android:id="@+id/bw1"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="163dp"
        android:layout_marginEnd="158dp"
        android:layout_marginBottom="236dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF9800"
        android:text="BW1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the backward direction
    of axis 2.-->
    <Button
        android:id="@+id/bw2"
        android:layout_width="91dp"
        android:layout_height="88dp"
        android:layout_marginStart="270dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="381dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF9800"
        android:text="BW2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for translational movement in the backward direction
    of axis 3.-->
    <Button
        android:id="@+id/bw3"
        android:layout_width="95dp"
        android:layout_height="88dp"
        android:layout_marginStart="52dp"
        android:layout_marginEnd="264dp"
        android:layout_marginBottom="379dp"
        android:layout_weight="1"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF9800"
        android:text="BW3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for circular manipulation of the robot.-->
    <Button
        android:id="@+id/circular"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="555dp"
        android:layout_weight="1"
        android:backgroundTint="#673AB7"
        android:text="Circular"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for rectangular manipulation of the robot.-->
    <Button
        android:id="@+id/rectangular"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="118dp"
        android:layout_marginBottom="509dp"
        android:layout_weight="1"
        android:backgroundTint="#673AB7"
        android:text="RECTANGULAR"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--This is used to define the button for transition to activity_main6. This page contains
    a list of additional manipulation modes.-->
    <Button
        android:id="@+id/addNew"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="528dp"
        android:layout_weight="1"
        android:backgroundTint="#673AB7"
        android:text="Add New"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--This is used to define the label for Extra Fine Retract.-->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="79dp"
        android:layout_marginBottom="57dp"
        android:layout_weight="1"
        android:text="Extra Fine Retract"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--This is used to define the label for Fine Retract.-->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="127dp"
        android:layout_weight="1"
        android:text="Fine Retract"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!--This is used to define the label for Large Retract.-->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="191dp"
        android:layout_weight="1"
        android:text="Large Retract"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>