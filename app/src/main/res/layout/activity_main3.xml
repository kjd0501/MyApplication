<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FFFEFE"
    android:backgroundTint="#7E9A97"

    tools:context="com.example.myapplication.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_centerInParent="true" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_weight="1"
        android:background="@color/purple_500"
        app:popupTheme="@style/Theme.MyApplication.PopupOverlay"
        app:title="                  Connected to your Robot"
        app:titleMargin="4dp"
        app:titleTextColor="#050505" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="536dp"
        android:background="@color/teal_700"
        app:popupTheme="@style/Theme.MyApplication.PopupOverlay"
        app:title="                 Suction cups manipulation"
        app:titleMargin="4dp"
        app:titleTextColor="#050505" />

    <ImageButton
        android:id="@+id/suctionCup3"
        android:layout_width="111dp"
        android:layout_height="105dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="239dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="235dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF8A80" />

    <ImageButton
        android:id="@+id/suctionCup1"
        android:layout_width="111dp"
        android:layout_height="105dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="422dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF8A80" />

    <ImageButton
        android:id="@+id/suctionCup2"
        android:layout_width="111dp"
        android:layout_height="105dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="237dp"
        android:layout_marginBottom="235dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#FF8A80" />

    <ImageButton
        android:id="@+id/innerSuctionCups"
        android:layout_width="111dp"
        android:layout_height="105dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="149dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="312dp"
        android:background="@drawable/circle_button"
        android:backgroundTint="#EA0909" />

    <Button
        android:id="@+id/perimeterCups"
        android:layout_width="192dp"
        android:layout_height="94dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="116dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="20dp"
        android:text="Perimeter cups on/middle cups off" />

    <Button
        android:id="@+id/allSuctionCups"
        android:layout_width="192dp"
        android:layout_height="94dp"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="114dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="129dp"
        android:text="All suction cups on/off" />


</RelativeLayout>